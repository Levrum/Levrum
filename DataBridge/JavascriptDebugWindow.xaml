<Window x:Class="Levrum.DataBridge.JavascriptDebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
        xmlns:local="clr-namespace:Levrum.DataBridge"
        mc:Ignorable="d"
        Title="Javascript Debug Output" Height="450" Width="800"
        WindowStartupLocation="CenterOwner"
        Closing="HandleFormClosing"
        IsVisibleChanged="Window_IsVisibleChanged">
    <Grid>
        <avalonEdit:TextEditor x:Name="DebugOutputTextBox" Text="Waiting for debug output..." Margin="8,8,8,8" IsReadOnly="True" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Auto"
                 MouseRightButtonUp="HandleTextboxRightClick"
                 />

    </Grid>
</Window>
