<Window x:Class="Levrum.DataBridge.JavascriptDebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Levrum.DataBridge"
        mc:Ignorable="d"
        Title="JavascriptDebugWindow" Height="450" Width="800"
        WindowStartupLocation="CenterOwner"
        Closing="HandleFormClosing">
    <Grid>
        <TextBox x:Name="DebugOutputTextBox" Text="Waiting for debug output..." TextWrapping="Wrap" Margin="8,8,8,8" IsReadOnly="True" VerticalScrollBarVisibility="Visible"
                 MouseRightButtonUp="HandleTextboxRightClick"
                 />

    </Grid>
</Window>
