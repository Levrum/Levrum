<Window x:Class="Levrum.UI.WPF.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Levrum.UI.WPF"
        mc:Ignorable="d"
        Title="Checking for Updates..." Height="196" Width="400" Closing="Window_Closing" IsVisibleChanged="Window_IsVisibleChanged">
    <Grid>
        <StackPanel Margin="0,16,0,0" VerticalAlignment="Top">
            <TextBlock Name="StatusTextBlock" Margin="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="32">Checking for Updates...</TextBlock>
            <ProgressBar Name="ProgressBar" Margin="16,8,16,0" Height="24" HorizontalAlignment="Stretch"/>
        </StackPanel>
        <Button Name="CancelButton" Margin="0,0,16,16" Height="24" Width="80" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="CancelButton_Click">Cancel</Button>
    </Grid>
</Window>
